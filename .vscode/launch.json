{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch CodeRacersGUI",
            "request": "launch",
            "mainClass": "guicoderacers.CodeRacersGUI",
            "projectName": "code-racing",  // Replace with your correct project name
            "vmArgs": "--module-path ${workspaceFolder}/lib/javafx-sdk-23.0.1/lib --add-modules javafx.controls,javafx.fxml,javafx.media",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "JAVA_HOME": "C:/Program Files/Java/jdk-21"  // Adjust this path as needed
            }
        }
    ]
}